{
  "manifest_version": 3,
  "name": "PopUpGPT",
  "version": "1.0",
  "description": " テキストを選択するだけで選択内容に基づいた検索を素早く実行します。便利なポップアップアイコンから簡単にアクセス! 画像：チャットチャット アイコン by Icons8 https://icons8.com/icon/kTuxVYRKeKEY/chatgpt",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["contextMenus", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "open-chatgpt": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Open ChatGPT"
    }
  }
}
